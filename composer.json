{
    "name": "mrpix/we-repack",
    "description": "MrpixWeRePack - WeRePack Integration for Shopware",
    "type": "shopware-platform-plugin",
    "license": "proprietary",
    "version": "1.1.0",
    "authors": [
        {
            "name": "mr. pixel KG",
            "email": "support@mr-pixel.de",
            "homepage": "https://mr-pixel.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "Mrpix\\WeRepack\\": "src/"
        }
    },
    "extra": {
        "shopware-plugin-class": "Mrpix\\WeRepack\\MrpixWeRepack",
        "label": {
            "de-DE": "WeRePack Integration",
            "en-GB": "WeRePack Integration"
        },
        "description": {
            "en-GB": "With WeRePack, sustainability is very simple: Packaging waste is minimized because customers can easily choose to receive reused shipping packaging using a checkbox.",
            "de-DE": "Mit WeRePack ist Nachhaltigkeit ganz einfach: Verpackungsmüll wird minimiert, denn Kunden können ganz einfach durch eine Checkbox wählen, wiederverwendete Versandverpackung zu erhalten."
        },
        "copyright": "(c) by mr. pixel KG",
        "manufacturerLink": {
            "de-DE": "https://mr-pixel.de/",
            "en-GB": "https://mr-pixel.de/"
        },
        "supportLink": {
            "de-DE": "https://mr-pixel.de",
            "en-GB": "https://mr-pixel.de"
        }
    },
    "require": {
        "php": "^8.1",
        "shopware/core": "6.6.* | 6.5.*",
        "shopware/storefront": "6.6.* | 6.5.*",
        "guzzlehttp/guzzle": "^7.2",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "phpcs": "vendor/bin/php-cs-fixer fix",
        "phpstan": "vendor/bin/phpstan analyse src"
    }
}
